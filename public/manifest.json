{
    "name": "Lecture Master",
    "description": "Makes watching lectures more efficient!",
    "version": "0.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab",
        "tabs",
        "tabCapture",
        "alarms"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["assets/contentScript.js"]
        }
    ],
    "host_permissions": ["*://*/*"],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
    },
    "icons": {
        "128": "icons/icon128.png"
    }
}
