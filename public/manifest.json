{
	"name": "Lecture Master",
	"description": "Makes watching lectures more efficient!",
	"version": "0.1",
	"manifest_version": 3,
	"action": {
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage",
		"scripting",
		"activeTab",
		"tabs",
		"tabCapture",
		"alarms"
	],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"contentScript.bundle.js"
			]
		}
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	}
}